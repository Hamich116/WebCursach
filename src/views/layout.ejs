<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Система регистрации входящих писем</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Система регистрации писем</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/letters">Письма</a>
                        </li>
                        <% if (currentUser.role_id === 1) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/users">Пользователи</a>
                            </li>
                        <% } %>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link"><%- currentUser.full_name %></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">Выход</a>
                        </li>
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (typeof messages !== 'undefined') { %>
            <% if (messages.success_msg) { %>
                <div class="alert alert-success alert-dismissible fade show">
                    <%= messages.success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            <% if (messages.error_msg) { %>
                <div class="alert alert-danger alert-dismissible fade show">
                    <%= messages.error_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
        <% } %>

        <%- body %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <%- typeof script !== 'undefined' ? script : '' %>
</body>
</html> 